<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.control.reports.ReportsFragment">


    <!-- Imagem de fundo no topo -->
    <ImageView
        android:id="@+id/imgAccountBackground"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/stock_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botões para os relatórios -->
    <LinearLayout
        android:id="@+id/reportsButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imgAccountBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp">

        <!-- Botão 1: Sales Report -->
        <Button
            android:id="@+id/btnSalesReport"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/sales"
            android:drawablePadding="18dp"
            android:backgroundTint="@color/DarkRedWine"
            android:text="Sales Reports"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="34dp" /> <!-- Espaçamento aumentado -->

        <!-- Botão 2: Stock Report -->
        <Button
            android:id="@+id/btnStockReport"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/stock"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/DarkRedWine"
            android:text="Stock Reports"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="34dp" /> <!-- Espaçamento aumentado -->

        <!-- Botão 3: Financial Report -->
        <Button
            android:id="@+id/btnFinancialReport"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/financial"
            android:drawablePadding="18dp"
            android:backgroundTint="@color/DarkRedWine"
            android:text="Financial Reports"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="34dp" />


        <!-- Botão de Voltar -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/arrow_left_24"
            android:contentDescription="Back"
            app:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="104dp"
            android:layout_marginTop="54dp"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>



