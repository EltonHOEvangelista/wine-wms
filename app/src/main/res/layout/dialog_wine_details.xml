<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_white"
    android:padding="16dp">

    <!-- Nome do vinho -->
    <TextView
        android:id="@+id/tvWineName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Wine Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Quantidade em estoque -->
    <TextView
        android:id="@+id/tvStockQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Stock: 100"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWineName" />

    <!-- Quantidade vendida no mês -->
    <TextView
        android:id="@+id/tvQuantitySold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Sold This Month: 50"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStockQuantity" />

    <!-- Valor de compra -->
    <TextView
        android:id="@+id/tvPurchasePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Price: $20.00"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuantitySold" />

    <!-- Valor de venda -->
    <TextView
        android:id="@+id/tvSalePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sale Price: $30.00"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPurchasePrice" />

