<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtWineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wine Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtWineStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock: 10"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/linearLayoutDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/edtStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new stock" />

        <Button
            android:id="@+id/btnEditStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Stock" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Wine" />
    </LinearLayout>
</LinearLayout>
